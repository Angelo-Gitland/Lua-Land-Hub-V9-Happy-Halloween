local TweenService = game:GetService("TweenService")
local Players = game:GetService("Players")
local player = Players.LocalPlayer

local gui = Instance.new("ScreenGui")
local frame = Instance.new("Frame")
local textLabel = Instance.new("TextLabel")
local sound = Instance.new("Sound")

gui.Name = "GlitchIntro"
gui.ResetOnSpawn = false
gui.Parent = player:WaitForChild("PlayerGui")

frame.Parent = gui
frame.Size = UDim2.new(1, 0, 1, 0)
frame.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
frame.BackgroundTransparency = 0.3

textLabel.Parent = frame
textLabel.Size = UDim2.new(0.9, 0, 0.2, 0)
textLabel.Position = UDim2.new(0.05, 0, 0.4, 0)
textLabel.BackgroundTransparency = 1
textLabel.TextColor3 = Color3.fromRGB(255, 0, 0)
textLabel.TextScaled = true
textLabel.Font = Enum.Font.Code
textLabel.Text = ""

sound.Parent = frame
sound.SoundId = "rbxassetid://1072995" -- Disturbia - Rihanna
sound.Volume = 15
sound:Play()

local message = "üç≠ Welcome Back To Lua Land Hub! Happy Halloween! üç≠"
for i = 1, #message do
	textLabel.Text = string.sub(message, 1, i)
	wait(0.05)
end

for i = 1, 5 do
	textLabel.TextTransparency = 1
	wait(0.1)
	textLabel.TextTransparency = 0
	wait(0.1)
end

task.delay(6, function()
	gui:Destroy()
	loadstring(game:HttpGet("https://raw.githubusercontent.com/Angelo-Gitland/Lua-Land-Hub-V9-Script/refs/heads/main/Lua%20Land%20Hub%20V9"))()
end)
